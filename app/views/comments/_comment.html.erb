<p>
  <%=comment.body%>
</p>
<% if @post.user_id == current_user.try(:id) %>
  <%= link_to 'Edit',   edit_post_comment_path(comment.post, comment) %>
  <%= link_to 'Delete', post_comment_path(comment.post, comment), method: :delete, data: { confirm: 'Do you want to delete this comment?' } %>
<% end %>