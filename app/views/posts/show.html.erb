<h1><%= @post.title %></h1>
<p>Posted by <%= @post.user.email %> at <%= time_ago_in_words(@post.created_at) %> ago.</p>
<p><%= @post.body %></p>
<h3>Comments:</h3>
<%= render @post.comments %>
<% if user_signed_in? %>
  <h3>Comment on Post:</h3>
  <%= render 'comments/form' %>
  <p>&nbsp</p>

  <% if @post.user_id == current_user.try(:id) %>
    <%= link_to "Edit Post", edit_post_path(@post), class: 'btn btn-custom' %>
    <%= link_to "Delete Post", post_path(@post), { method: :delete, class: 'btn btn-custom', data: { confirm: 'Are you sure you want to delete this post?' }} %>
  <% end %>
<% end %>
<%= link_to "Back to All Posts", posts_path, class: 'btn btn-custom' %>

