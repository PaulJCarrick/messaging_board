<% @posts.each do |post| %>
   <div class="col-md-4">
      <div class='message'>
         <h1 class='message-title'><%= post.title %></h1>
         <%= link_to "View Post", post_path(post), class: 'btn btn-custom' %>

         <% if post.user_id == current_user.try(:id) %>
           <%= link_to "Edit Post", edit_post_path(post), class: 'btn btn-custom' %>
           <%= link_to "Delete Post", post_path(post), { method: :delete, class: 'btn btn-custom', data: { confirm: 'Are you sure you want to delete this post?' }} %>
         <% end %>
      </div>
   </div>
<% end %>
