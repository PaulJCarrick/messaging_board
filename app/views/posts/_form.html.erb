<%= simple_form_for @post do |f| %>
  <%= f.input :title, error: 'Title is mandatory, please specify one' %>
  <%= f.input :body, label: 'Post' %>
  <%= f.button :submit, class: "btn-custom"  %>
  <p>&nbsp</p>
  <% if @post.id %>
    <%= link_to "Back to View Post", post_path(@post), class: 'btn btn-custom' %>
  <%end %>
<% end %>
