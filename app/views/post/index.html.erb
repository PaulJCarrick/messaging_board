<h1>Posts</h1>
<% @posts.each do |post| %>
   <h1><%= post.title %></h1>
   <%= link_to "View Post", post_show_path_url(post), class: 'btn btn-default' %>
   <%= link_to "Delete Post", post_destroy_path_url(post), { class: 'btn btn-default', data: { confirm: 'Are you sure you want to delete this post?' }} %>
<% end %>
<p>&nbsp</p>
<p>
<%= link_to "New Post", post_new_path_url, class: 'btn btn-default' %>
</p>
